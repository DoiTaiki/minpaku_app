<tr id="room-<%= room.id %>">
    <td><%= link_to image_tag(room.display_image), room_path(room.id) %></td>
    <td><%= link_to room.name, room_path(room.id) %></td>
    <td><%= room.room_introduction %></td>
    <td><%= room.price %></td>
    <td><%= room.created_at %></td>
    <% if !current_user.nil? && current_user.admin? %>
        <td><%= link_to "管理人による削除", destroy_by_admin_room_path(room.id), method: :delete, data: { confirm: "本当に削除しますか？" } %></td>
    <% elsif !current_user.nil? && current_user.id == room.user_id %>
        <td><%= link_to "削除", destroy_room_path(room.id), method: :delete, data: { confirm: "本当に削除しますか？" } %></td>
    <% end %>
</tr>
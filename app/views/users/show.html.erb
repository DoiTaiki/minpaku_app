<h2>アカウント情報</h2>
<div class="table-container">
  <table>
    <tr>
      <th>名前</th>
      <td><%= @user.name %></td>
    </tr>
    <tr>
      <th>メール</th>
      <td><%= @user.email %></td>
    </tr>
    <tr>
      <th>アイコン画像</th>
      <td><%= gravatar_for @user, size:45 %></td>
    </tr>
    <tr>
      <th>自己紹介文</th>
      <td><%= @user.self_introduction %></td>
    </tr>
  </table>
</div>
<p><%= link_to "アカウント情報を編集する", edit_user_path %></p>
<p><%= link_to "自己紹介文を編集する", profile_user_path %></p>
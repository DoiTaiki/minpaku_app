<% provide(:button_text, "編集を保存する") %>
<h2>自己紹介編集</h2>
<div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= form_with model: @user, url: profile_user_path, local: true do |f| %>
        <%= render "shared/error_messages" %>
        
        <%= f.label :self_introduction, "自己紹介" %>
        <%= f.text_area :self_introduction, class: 'form-control' %>
        
        <%= f.submit yield(:button_text), class: "btn btn-primary" %>
      <% end %>
      <p><%= link_to "ホーム画面に戻る", root_path %></p>
      <p><%= link_to "アカウント情報を編集する", edit_user_path %></p>
    </div>
</div>

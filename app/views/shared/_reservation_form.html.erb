<% require 'date' %>

<%= form_with model: @reservation, local: true do |f| %>
  <%= render "shared/error_messages", object: f.object %>
  <%= f.label :start_date, "開始日" %>
  <%= f.datetime_field :start_date, class: 'form-control' %>
  
  <%= f.label :end_date, "終了日" %>
  <%= f.datetime_field :end_date, class: 'form-control' %>
  
  <%= f.label :number_of_people, "人数" %>
  <%= f.number_field :number_of_people, class: 'form-control' %>
  
  <%= f.hidden_field :room_id, value: @room.nil? ? @reservation.room_id : @room.id %>
  
  <%= f.submit yield(:button_text), class: "btn btn-primary" %>
<% end %>
